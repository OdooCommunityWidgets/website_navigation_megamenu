<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
      <template id="custom_navigation_Genesis" inherit_id="website.layout" name="website_custom_navigation" customize_show="true" priority="1">
        <xpath expr="//div[@id='wrapwrap']//header" position="replace">
          <header id="header">
				    <div class="container">
					    <h1 class="logo">
						    <a class="navbar-brand" href="/" t-field="res_company.name">
                  <img alt="Logo" class="logo-sticky-active" src="/logo.png"/>
						    </a>
					     </h1>
					  <div class="search custom">
					  </div>
					  <ul class="social-icons">
						 <li class="facebook"><a t-att-href="website.social_facebook" target="_blank" data-placement="bottom" rel="tooltip" title="Facebook">Facebook</a></li>
						 <li class="twitter"><a t-att-href="website.social_twitter" target="_blank" data-placement="bottom" rel="tooltip" title="Twitter">Twitter</a></li>
					  </ul>
					  <nav>
						<ul class="nav nav-pills nav-top">
							<li>
								<a href="/page/frequently-asked-questions"><i class="fa fa-angle-right"></i>FAQ's</a>
							</li>
							<li>
								<a href="/page/website.terms-and-conditions"><i class="fa fa-angle-right"></i>Terms &amp; Conditions</a>
							</li>
                                                        <li>
                                                                <a href="/page/website.privacy-policy"><i class="fa fa-angle-right"></i>Privacy Policy</a>
                                                        </li>
                                                        <li>
                                                                <a href="/page/website.contactus"><i class="fa fa-angle-right"></i>Contact Us</a>
                                                        </li>
							<li class="phone">
								<span><i class="fa fa-phone" t-field="res_company.phone">&amp;nbsp; (123) 456-7890</i></span>
							</li>
						</ul>
					</nav>
					<button class="btn btn-responsive-nav btn-inverse" data-toggle="collapse" data-target=".nav-main-collapse">
						<i class="fa fa-bars"></i>
					</button>
				</div>
				<div class="navbar-collapse nav-main-collapse collapse">
					<div class="container">
						<nav class="nav-main mega-menu">
							<ul class="nav nav-pills nav-main" id="top_menu">
                                    				<!-- Platform Menu START -->
                               <!--  <ul class="nav navbar-nav navbar-right" id="top_menu"> -->
                                    <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                        <t t-call="website.submenu"/>
                                    </t>
                                <!-- </ul> -->
								<!-- Platform Menu END -->
                                                                <!-- ORIGINAL MENU ITEMS START -->
								<!-- ORIGINAL MENU ITEMS END -->
								<!-- Logged in user menu Dropdown Start -->
								<li class="dropdown mega-menu-item mega-menu-signin signin logged" t-ignore="true" t-if="website.user_id != user_id" id="headerAccount">
									<a class="dropdown-toggle" href="page-login.html">
										<i class="fa fa-user"></i> <span t-esc="user_id.name"/>
										<i class="fa fa-angle-down"></i>
									</a>
									<ul class="dropdown-menu">
										<li>
											<div class="mega-menu-content">
												<div class="row">
													<div class="col-md-8">
														<div class="user-avatar">
															<div class="img-thumbnail">
																<img t-if="not user_id.partner_id.name == 'Public user'" class="img pull-left img-rounded" t-att-src="website.image_url(user_id.partner_id, 'image_medium')" style="width: 60px;"/>
															</div>
															<p><strong><span t-esc="user_id.name"/></strong><span t-esc="user_id.email">example@example.com</span></p>
														</div>
													</div>
													<div class="col-md-4">
														<ul class="list-account-options">
															<!-- <li>
																<a href="/web#menu_id=436" role="menuitem">My Portal</a>
															</li> -->
															<li>
																<a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Log Out</a>
															</li>
														</ul>
													</div>
												</div>
											</div>
										</li>
									</ul>
								</li>
								<!-- Logged in user menu Dropdown END -->

								<!-- Sign Up and Login Dropdown Start -->
								<li class="dropdown mega-menu-item mega-menu-signin signin" t-ignore="true" t-if="user_id.partner_id.name == 'Public user'" id="headerAccount">
									<a class="dropdown-toggle" href="/web">
										<i class="fa fa-user"></i> Sign In
										<i class="fa fa-angle-down"></i>
									</a>
									<ul class="dropdown-menu">
										<li>
											<div class="mega-menu-content">
												<div class="row">
													<div class="col-md-12">

														<div class="signin-form">

															<span class="mega-menu-sub-title">Sign In</span>

															<form class="oe_login_form" role="form" t-attf-action="/web/login{{ '?debug' if debug else '' }}" method="post" onsubmit="this.action = this.action + location.hash">
																<div class="row">
																	<div class="form-group field-login">
																		<div class="col-md-12">
																			<label for="login" class="control-label">Username or Email Address</label>
																			<input type="text" name="login" t-att-value="login" id="login" class="form-control input-lg" required="required" autofocus="autofocus"/>
																		</div>
																	</div>
																</div>
																<div class="row">
																	<div class="form-group field-password">
																		<div class="col-md-12">
																			<label for="password" class="control-label">Password</label>
																			<input type="password" name="password" id="password" class="form-control input-lg" required="required" t-att-autofocus="'autofocus' if login else None"/>
																		</div>
																	</div>
																</div>
																<p class="alert alert-danger" t-if="error">
                        														<t t-esc="error"/>
                    														</p>
                    														<p class="alert alert-success" t-if="message">
                      															 <t t-esc="message"/>
                   														</p>
																<div class="row">
																	<div class="col-md-6">
																	</div>
																	<div class="col-md-6">
                                                                                                                                                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                                                                                                                                                        <div class="clearfix oe_login_buttons">
                                                                                                                                                                <button type="submit" class="btn btn-primary pull-right push-bottom" data-loading-text="Loading...">Log in</button>
                                                                                                                                                        </div>
																	</div>
																</div>
															</form>
														</div>

														<div class="recover-form">
															<span class="mega-menu-sub-title">Reset My Password</span>
															<p>Complete the form below to receive an email with the authorization code needed to reset your password.</p>

															<form action="" id="" method="post">
																<div class="row">
																	<div class="form-group">
																		<div class="col-md-12">
																			<label>E-mail Address</label>
																			<input type="text" value="" class="form-control input-lg"/>
																		</div>
																	</div>
																</div>
																<div class="row">
																	<div class="col-md-12">
																		<input type="submit" value="Submit" class="btn btn-primary pull-right push-bottom" data-loading-text="Loading..."/>
																	</div>
w																</div>
															</form>

															<p class="log-in-info">Already have an account? <a href="#" id="headerRecoverCancel">Log In!</a></p>
														</div>

													</div>
												</div>
											</div>
										</li>
										<!-- Signup and Login END -->
									</ul>
								</li>
							</ul>
						</nav>
					</div>
				</div>
			</header>
    </xpath>
</template>
    </data>
</openerp>
